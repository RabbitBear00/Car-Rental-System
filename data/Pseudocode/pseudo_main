IMPORT admin
IMPORT default 
IMPORT clients 
IMPORT datetime 

FUNCTION main()
    DECLARE data_clients = []

    DECLARE data_carlist = []

    DECLARE data_transactions = []

    DECLARE user_data = []

    main_title = "Welcome to Super Car Rental System"

    DECLARE space_clients = [11, 6, 20, 20, 13, 15, 13, 35, 16, 12, 10]
    DECLARE space_cars = [7, 10, 20, 13, 10, 15, 15, 15, 15, 15, 10, 20, 12]
    DECLARE space_transactions = [11, 20, 7, 10, 20, 13, 15, 10, 10, 10, 10, 15, 15, 12, 12, 10, 10, 12, 21]

    data_clients = CALL FUNCTION input_dataclients()
    data_carlist = CALL FUNCTION input_datacars()
    data_transactions = CALL FUNCTION input_datatransactions()
    
    DOWHILE(1)
        login_index = CALL FUNCTION startup_interface(main_title, data_clients, data_carlist, space_cars, space_clients)
        user_data = data_clients[login_index]
        
        IF(login_index == 1) THEN
            CALL FUNCTION admin_menu(user_data, data_clients, data_carlist, data_transactions, login_index, space_cars, space_clients, space_transactions)

        ELSE
            CALL FUNCTION client_menu(user_data, data_clients, data_carlist, data_transactions, login_index, space_cars, space_clients, space_transactions)

        ENDIF
        
    ENDDO
END

BEGIN
    CALL FUNCTION main()
END